<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>Movies Planner</h1>
      <%= form_tag movies_path, method: :get do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Find a movie"
        %>
      <% end %>
      <div id="movies">
        <% @movies.each do |movie| %>
          <h4><%= movie.class == Movie ? movie.title : movie.searchable_type %></h4>
          <p><%= movie.class == Movie ? movie.syllabus : movie.content %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>
